{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "jsx": "preserve",
      "lib": ["dom", "esnext"],
      "strict": true,
      "noEmit": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "baseUrl": "./",
      "paths": {
        "@components": [
          "src/components"
        ],
        "@pages": [
          "src/pages"
        ],
        "@styles": [
          "src/styles"
        ],
        "@config": [
          "src/config"
        ],
        "@icons": [
          "src/components/shared/icons"
        ],
      }
    },
    "include": ["./src/**/*"]
}